@model Test.Models.OrderItems
@{
    ViewBag.Title = "OrderItems";
}
@using (Html.BeginForm("CreateOrderItem", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   
    <div class="row">
        <div class="col-lg-6">
            <div class="page-header">
                <h1 id="tables">OrderItems</h1>
            </div>
        </div>

    </div>

    <table class="table">
        <thead>
            <tr><th>Id</th><th>OrderId</th><th>Name</th><th>Quantity</th><th>Unit</th></tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.TextAreaFor(model => model.countOrderItem, new { @class = "form-control", placeholder = "Enter Id", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextAreaFor(model => model.orderId, new { @class = "form-control", placeholder = "Enter Id", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextBoxFor(model => model.oiName, new { @class = "form-control", placeholder = "Enter Name", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextBoxFor(model => model.oiQuantity, new { @class = "form-control", placeholder = "Enter Quantity", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextBoxFor(model => model.oiUnit, new { @class = "form-control", placeholder = "Enter Unit", required = "", autofocus = "", @rows = 1 })</td>


                @*{
        <td>@Html.TextBoxFor(model => model.tOrder.ProviderId, new { @class = "form-control", placeholder = "Enter ProviderId", required = "", autofocus = "", @rows = 1 })</td>
        }*@
            </tr>

        </tbody>
    </table>
    <div class="form-group">
        <button type="submit" value="CreateOrderItem" class="btn btn-default">Save</button>
        @*  <input type="button" value="AddNewItem" onclick="window.location.href='@Url.Action("Create", "Home")';" />*@

    </div>
}
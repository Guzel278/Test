@model Test.Models.OrderItems
@{
    ViewBag.Title = "OrderItems";
}
@using (Html.BeginForm("Index1", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.orderId)
    <div class="row">
        <div class="col-lg-6">
            <div class="page-header">
                <h1 id="tables">OrderItems</h1>
            </div>
        </div>

    </div>

    <table class="table">
        <thead>
            <tr><th>Id</th><th>OrderId</th><th>Name</th><th>Quantity</th><th>Unit</th></tr>
        </thead>
        <tbody>
            @foreach (var orderitem in Model.lstOrderItem)
            {
                @* <tr><td>@orderitem.Id</td><td>@orderitem.OrderId</td><td>@orderitem.Name</td><td>@orderitem.Quantity</td><td>@orderitem.Unit</td></tr>*@
            <tr>
                <td>@Html.TextAreaFor(model => @orderitem.Id, new { @class = "form-control", placeholder = "Enter Id", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextAreaFor(model => @orderitem.OrderId, new { @class = "form-control", placeholder = "Enter Id", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextBoxFor(model => @orderitem.Name, new { @class = "form-control", placeholder = "Enter Name", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextBoxFor(model => @orderitem.Quantity, new { @class = "form-control", placeholder = "Enter Quantity", required = "", autofocus = "", @rows = 1 })</td>
                <td>@Html.TextBoxFor(model => @orderitem.Unit, new { @class = "form-control", placeholder = "Enter Unit", required = "", autofocus = "", @rows = 1 })</td>
                <td><input type="button" value="Delete" onclick="window.location='@Url.Action("DeleteOrderItem", "Home", new { id = @orderitem.Id}, null)';" /></td>
                <td><input type="button" value="Save" onclick="window.location='@Url.Action("SaveChanges", "Home", new { id = @orderitem.Id}, null)';" /></td>
            </tr>

             }

          </tbody>
     </table>
    <div class="form-group">
        @*<button type="submit" value="Create" class="btn btn-default">Add new item</button>*@
        <input type="button" value="Create" onclick="window.location='@Url.Action("AddNewItem", "Home", new { id = Model.orderId}, null)';" />
    </div>
            }
